{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 flex h-full py-6 items-center gap-x-11">
		{% if editForm %}
		{% else %}
		<div class="w-1/3">
		
			{% if product.pictures|length > 1 %}
			
				<div id="default-carousel" class="relative w-full" data-carousel="slide">
					<div class="relative h-56 overflow-hidden rounded-lg md:h-96">
						{% for key, picture in product.pictures %}
							<div class="hidden duration-700 ease-in-out" data-carousel-item>
								<img src="{{ "/" ~ products_path ~ "/" ~ picture }}" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="{{ product.title }} photo n° {{ key }}">
							</div>
						{% endfor %}
					</div>
					<div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
						{% for key, picture in product.pictures %}
							<button type="button" class="w-3 h-3 rounded-full" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="{{ key }}"></button>
						{% endfor %}
					</div>
					<button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
						<span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
							<svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
							</svg>
							<span class="sr-only">Previous</span>
						</span>
					</button>
					<button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
						<span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
							<svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
							</svg>
							<span class="sr-only">Next</span>
						</span>
					</button>
				</div>
	
			{% else %}
				<img src="{{ "/" ~ products_path ~ "/" ~ product.pictures.first }}" class="object-fill block w-full" alt="{{ product.title }}">
			{% endif %}
		</div>
{% endif %}
		<div class="">
			{% if editForm %}
				{{ form_start(editForm) }}
			{% endif %}
			
			<p class="text-sky-500 uppercase tracking-wider">{{ current_category.title }}</p>
			<div class="w-full flex flex-col sm:flex-row gap-x-4">
				{% if editForm %}
				<div class="w-full sm:w-1/2">
					<p class="text-gray-500 mt-4 text-lg">
						<strong>Titre</strong>
					</p>
					{{ form_row(editForm.title) }}
				</div>
				<div class="w-full sm:w-1/2">
					<p class="text-gray-500 mt-4 text-lg">
						<strong>Catégorie</strong>
					</p>
					{{ form_row(editForm.category) }}
				</div>
				{% else %}
					<h2 class="text-3xl xl:text-4xl font-bold mt-4 text-gray-800 capitalize">{{ product.title }}</h2>
				{% endif %}
			</div>
			<p class="text-gray-500 text-lg">
				<strong>Description</strong>
			</p>
			<p class="text-gray-500 mt-2 text-lg">
				{% if editForm %}
					{{ form_row(editForm.description) }}
				{% else %}
					{{ product.description }}
				{% endif %}
			</p>
			<div class="w-full flex flex-col sm:flex-row gap-x-4">
				<div class="w-full sm:w-1/3">
					<p class="text-gray-500 mt-2 text-lg">
						<strong>Etat</strong>
					</p>
					<p class="text-gray-500 text-lg">
						{% if editForm %}
							{{ form_row(editForm.condition) }}
						{% else %}
							{{ product.condition }}
						{% endif %}
					</p>
				</div>
				<div class="w-full sm:w-1/3">
					<p class="text-gray-500 mt-2 text-lg">
						<strong>Prix</strong>
					</p>
					<p class="text-gray-500 text-lg">
						{% if editForm %}
							<div>
								<div class="relative">
									{{ form_row(editForm.price) }}
									<div class="absolute inset-y-0 end-0 flex items-center pointer-events-none z-20 pe-4">
										<span class="text-gray-500">€</span>
									</div>
								</div>
							</div>
						{% else %}
							{{ product.price|price }}
						{% endif %}
					</p>
				</div>
				<div class="w-full sm:w-1/3">
				<p class="text-gray-500 mt-4 text-lg">
				<strong>Vendu par</strong>
			</p>
			<p class="text-gray-500 mt-2 text-lg">
				{{ product.author.firstname }}
				{{ product.author.lastname }}
			</p>

				</div>
			</div>
			{% if editForm %}
				<p class="text-gray-500 mt-4 text-lg">
					<strong>Images</strong>
				</p>
				{{ form_row(editForm.medias) }}

				<div class="mt-4 grid gap-4 grid-cols-6">
				{% for key, picture in product.pictures %}
					<div class="rounded-full relative">
						<img src="{{ "/" ~ products_path ~ "/" ~ picture }}" class="object-cover rounded-xl h-full" alt="{{ product.title }} photo n° {{ key }}">
						<a href="{{ path('redirect.delete.media', { 'product': product.id, 'media': picture.id }) }}" class="absolute right-2 top-2 bg-white w-6 h-6 rounded-full bg-opacity-50 shadow-lg text-center">
							<i class="fa-solid fa-trash text-red-500 shadow opacity-50 hover:opacity-100 ease-linear"></i>
						</a>
					</div>
				{% endfor %}
				</div>

			{% endif %}
			
			<div class="flex mt-5 justify-between">
				<a href="{{ path('app.categories', { 'category': current_category }) }}" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-full flex items-center gap-x-2">
					<i class="fa-solid fa-arrow-left"></i>
					Retour
				</a>
				<div class="flex gap-x-2">
					{% if app.user == null or app.user != product.author %}
						<a href="{{ path('redirect.favorites', { 'product': product }) }}" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full flex items-center gap-x-2">
							{% if app.user and product in app.user.favorites %}
								<i class="fa-solid fa-heart"></i>
								Retirer des favoris
							{% else %}
								<i class="fa-regular fa-heart"></i>
								Mettre en favoris
							{% endif %}
						</a>
						<a target="_blank" href="{{ path('redirect.buy.product', { 'product': product }) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full flex items-center gap-x-2">
							<i class="fa-solid fa-cart-shopping"></i>
							Acheter
						</a>
					{% else %}
						{% if editForm %}
							<a href="{{ path('app.categories.product', { 'category': current_category, 'product': product }) }}" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full flex items-center gap-x-2">
								<i class="fa-solid fa-xmark"></i>
								Annuler les modifications
							</a>
							<button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full flex items-center gap-x-2">
								<i class="fa-solid fa-floppy-disk"></i>
								Sauvegarder les modifications
							</button>
						{% else %}
							<a href="{{ path('app.categories.product', { 'category': current_category, 'product': product, 'edit': true }) }}" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-full flex items-center gap-x-2">
								<i class="fa-solid fa-pen"></i>
								Modifier
							</a>
						{% endif %}
					{% endif %}
				</div>
			</div>
			{% if editForm %}
				{{ form_end(editForm) }}
			{% endif %}
			
		</div>
	</div>
{% endblock %}
