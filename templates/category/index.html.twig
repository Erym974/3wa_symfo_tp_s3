{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}

	<section class="">
		<div class="container px-6 py-12 mx-auto">
			<h1 class="text-2xl font-semibold text-gray-800 lg:text-3xl dark:text-white">Les annonces</h1>

			<div class="mt-8 xl:mt-16 lg:flex lg:-mx-12">
				<div class="lg:mx-12">
					<h1 class="text-xl font-semibold text-gray-800 dark:text-white">Cat√©gories</h1>

					<div class="mt-4 space-y-4 lg:mt-8">
						{% for category in categories %}
							<a href="{{ path('app.categories', { 'category': category }) }}" class="block text-blue-500 dark:text-blue-400 hover:underline">{{ category.title }}</a>
						{% endfor %}
					</div>
				</div>

				<div class="flex-1 mt-8 lg:mx-12 lg:mt-0">
					<div class="grid grid-cols-1 gap-8 md:grid-cols-2 xl:grid-cols-3 ">

						{% for product in products %}
							{% include 'components/card.html.twig' with { product: product } %}
						{% endfor %}

					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
