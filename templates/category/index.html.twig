{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}

	<section class="">
		<div class="container px-6 py-12 mx-auto">
			<h2 class="text-4xl font-extrabold px-16 py-4">Les annonces</h2>

			{% if app.user %}
				<div class="flex justify-end">
				<a href="{{ path('app_new_ad') }}" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">
					<i class="fa-solid fa-plus"></i>
					Créer une nouvelle annonce
				</a>
			</div>
			{% endif %}

			<div class="mt-8 xl:mt-16 lg:flex lg:-mx-12">
				<div class="lg:mx-16">
					<div class="sticky top-10 bg-gray-800 rounded-lg px-12 py-6">
						<h1 class="text-xl font-semibold text-white">Catégories</h1>

						<div class="mt-4 space-y-4 lg:mt-8">
							{% for category in categories %}
								<a href="{{ path('app.categories', { 'category': category }) }}" class="block text-blue-400 hover:underline {% if category.id == current_category.id %} underline font-bold {% endif %}">{{ category.title }}</a>
							{% endfor %}
						</div>
					</div>
				</div>

				<div class="flex-1 mt-8 lg:mx-12 lg:mt-0">
					<div class="grid grid-cols-1 gap-8 md:grid-cols-2 xl:grid-cols-3 ">

						{% for product in products %}
							{% include 'components/card.html.twig' with { product: product } %}
						{% endfor %}

					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
