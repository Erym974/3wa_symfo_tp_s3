{% extends 'base.html.twig' %}

{% block title %}Mes annonces
{% endblock %}

{% block body %}

	<h2 class="text-4xl font-extrabold px-16 py-4">Mes annonces</h2>

	<div class="flex justify-end">
		<a href="{{ path('app_new_ad') }}" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">
			<i class="fa-solid fa-plus"></i>
			Créer une nouvelle annonce
		</a>
	</div>

	<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
		<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
			<thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
				<tr>
					<th scope="col" class="px-6 py-3">
						Photo
					</th>
					<th scope="col" class="px-6 py-3">
						Titre de l'annonce
					</th>
					<th scope="col" class="px-6 py-3">
						Catégorie
					</th>
					<th scope="col" class="px-6 py-3">
						Etat
					</th>
					<th scope="col" class="px-6 py-3">
						Vendu
					</th>
					<th scope="col" class="px-6 py-3">
						Prix
					</th>

					<th scope="col" class="px-6 py-3">
						Action
					</th>
				</tr>
			</thead>
			<tbody>
				{% for product in products  %}
					<tr class="odd:bg-white even:bg-gray-50 border-b dark:border-gray-700">
						<th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
							<img src="{{ "/" ~ products_path ~ "/" ~ product.pictures.first }}" class="rounded-lg shadow-none block w-full" alt="{{ product.title }} photo">
						</th>
						<td class="px-6 py-4">
							{{ product.title }}
						</td>
						<td class="px-6 py-4">
							{{ product.category.title }}
						</td>
						<td class="px-6 py-4">
							{{ product.condition }}
						</td>
						<td class="px-6 py-4">
							{% if product.selled %}
								<span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Oui</span>
							{% else %}
								<span class="bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Non</span>
							{% endif %}
						</td>
						<td class="px-6 py-4">
							{{ product.price|price }}
						</td>
						<td class="px-6 py-4">
							{% if product.deleted == false and product.selled == false %}
								<a href="{{ path('app.categories.product', { 'category': product.category, 'product': product, 'edit': true }) }}" class="font-medium text-blue-600 hover:underline">Modifier</a>
								<a href="{{ path('redirect.delete.product', { 'product': product }) }}" class="font-medium text-red-600 hover:underline">Supprimer l'anonce</a>
							{% else %}
								<span class="bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">Annonce supprimée</span>
							{% endif %}
						</td>
					</tr>
				{% endfor %}
				{% if products|length == 0 %}
					<tr>
						<td colspan="7" class="px-6 py-4 text-center">
							Vous avez publié aucune annonce
						</td>
					</tr>
				{% endif %}
			</tbody>
		</table>
	</div>

{% endblock %}
